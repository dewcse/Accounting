@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/Accounts/Loan.js"></script>
    <style type="text/css">
        .uniform-input {
            width: 80% !important;
        }

        .selector span {
            width: 500px !important;
        }

        #txtInformation {
            width: 80%;
        }
    </style>

}

<div class="heading">
    <h2> Loan  </h2>
</div>

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4">ID: </label>
                <div class="col-md-8">
                    <input type="text" disabled="disabled" id="txtId">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4"><span style="color: red">*</span>Loan Information:</label>
                <div class="col-md-8">
                    <textarea id="txtInformation" rows="3"></textarea>

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4"><span style="color: red">*</span>Amount: </label>
                <div class="col-md-8">
                    <input type="text" id="txtAmount" onblur="return isNumber(event)" onchange="CalculateNetPayable()" />
                </div>
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label class="control-label col-md-4">Reference No: </label>
                <div class="col-md-8">
                    <input type="text" id="txtReferenceNo" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">Interest (%): </label>
                <div class="col-md-8">
                    <input type="number" id="txtInterest" maxlength="3" value="0" min="0" max="100"
                           onkeypress="return isNumber(event)" onchange="    CalculateNetPayable()" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">Net Payable: </label>
                <div class="col-md-8">
                    <input type="text" id="txtNetPayable" readonly="readonly" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4"></label>
                <div class="col-md-8">
                    <button class="btn btn-default" id="btnClear" name="Clear"><b>Clear</b></button>&nbsp; &nbsp;
                    <button class="btn btn-info" id="btnSave" name="Save"><b>Save</b></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 pre-scrollable" id="loanInfoForEdit" align="left" style=" margin-top: 15px;">
        </div>
    </div>
</div>


