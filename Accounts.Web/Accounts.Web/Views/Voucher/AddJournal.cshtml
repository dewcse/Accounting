@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @*<link href="~/Scripts/Vendor/dataTable/dataTables.min.css" rel="stylesheet" />
        <script src="~/Scripts/Vendor/dataTable/dataTables.min.js"></script>*@
    <script src="~/Scripts/Accounts/JournalVoucher.js"></script>
    <style type="text/css">
        .uniform-input {
            width: 80% !important;
        }

        .rownewss {
            margin-left: 10px !important;
            margin-right: 10px !important;
            margin-top: 5px;
            padding-bottom: -20px;
        }

        .ddlSize {
            width: 80% !important;
        }

        .fieldsetTopMargin {
            margin-top: 15px;
        }

        .selector span {
            width: 500px !important;
        }
    </style>
}

<div class="heading">
    <h2> Journal Voucher </h2>
</div>
<div class="form-horizontal">
    <div class="row">
        <br />
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4">Voucher Code: </label>
                <div class="col-md-8">
                    <input type="text" disabled="disabled" id="txtVoucherCode">
                    <input type="hidden" id="lblVoucherNo" />
                    <input type="hidden" id="lblVoucherType" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">Date:</label>
                <div class="col-md-8">
                    <input type="text" id="txtDate" />
                </div>
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label class="control-label col-md-4"><span style="color: red">*</span>Narration: </label>
                <div class="col-md-8">
                    <input type="text" maxlength="100" id="txtNarration" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">Reference: </label>
                <div class="col-md-8">
                    <input type="text" maxlength="100" value="#" id="txtReference" />
                </div>
            </div>
            @*<div class="form-group">
                    <label class="control-label col-md-4"></label>
                    <div class="col-md-8">
                        <button class="btn btn-default" id="btnClear" name="Clear"><b>Clear</b></button>&nbsp; &nbsp;
                        <button class="btn btn-info" id="btnSave" name="Save"><b>Save</b></button>
                    </div>
                </div>*@
        </div>
    </div>
    <div class="col-md-12 responsive" id="chartOfAccountDiv" align="center" style=" margin-top: 15px;">
    </div>

    <div class="row rownewss">
        <fieldset class="well col-md-12">
            <div class="col-md-1 fieldsetTopMargin">

                <div class="form-group">
                    <button class="btn btn-primary" id="btnAdd" onclick="AddRow()">Add</button>
                </div>


            </div>

            <div class="col-md-4 fieldsetTopMargin">
                <div class="form-group">
                    <label class="control-label col-md-4"> Total Debit: </label>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" id="txtTotalDebit" />
                    </div>
                </div>
            </div>

            <div class="col-md-4 fieldsetTopMargin">
                <div class="form-group">
                    <label class="control-label col-md-4"> Total Credit: </label>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" id="txtTotalCredit" />
                    </div>
                </div>
            </div>
            <div class="col-md-3 fieldsetTopMargin">
                <div align="right">
                    <button class="btn btn-default" id="btnClear" style="border: 1px solid red;"><b>Clear</b></button>&nbsp; &nbsp;
                    <button class="btn btn-primary" id="btnSave"><b>Save</b></button>
                </div>

            </div>
        </fieldset>
    </div>
</div>

