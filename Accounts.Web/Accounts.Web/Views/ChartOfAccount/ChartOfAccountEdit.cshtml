@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/Accounts/ChartOfAccountEdit.js"></script>

    <style type="text/css">
        .uniform-input {
            width: 80% !important;
        }

        #ddlAccountTypeOuter, #ddlAccountGroupOuter {
            width: 80% !important;
        }

        .selector span {
            width: 500px !important;
        }
    </style>
}

<div class="heading">
    <h2> Chart of Account </h2>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4">Chart of Account ID: </label>
                <div class="col-md-8">
                    <input type="text" disabled="disabled" id="txtChartId">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4"><span style="color: red">*</span>Account Type: </label>
                <div class="col-md-8">
                    <div id="ddlAccountTypeOuter">
                        <select id="ddlAccountType">
                            <option value="-1">Select a Account Type</option>
                        </select>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label class="control-label col-md-4"><span style="color: red">*</span>Account Group: </label>
                <div class="col-md-8">
                    <div id="ddlAccountGroupOuter">
                        <select id="ddlAccountGroup">
                            <option value="-1">Select a Account Group</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">Chart of Account Name:</label>
                <div class="col-md-8">
                    <input type="text" maxlength="100" id="txtChartName" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4"></label>
                <div class="col-md-8">
                    <button class="btn btn-default" id="btnClear" name="Clear"><b>Clear</b></button>&nbsp; &nbsp;
                    <button class="btn btn-info" id="btnUpdate" name="Update"><b>Update</b></button>
                </div>
            </div>
        </div>
    </div>
</div>



